@model ResetPasswordModel

@{
    ViewData["Title"] = "Password Reset";
}


<style>
    .card {
        width: 70%; /* Use a percentage for responsiveness */
        max-width: 400px; /* Set a maximum width for larger screens */
        margin: 0 auto; /* Center the card */
        padding: 5px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card h2 {
        color: #333333;
    }

    .card p {
        color: #666666;
    }

    .lgn,
    .lgnn {
        padding: 5px 2px;
        margin-top: 10px;
        color: #ffffff;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        display: block;
        width: 100%; /* Make buttons fill the container */
    }

    .lgn {
        color: #fff !important;
        background: linear-gradient(57deg, #4963d5, #040b67bd) !important;
        border-color: #0a58ca !important;
    }

    .lgn:hover {
            color: #fff;
            background: linear-gradient( 57deg,#0b06b996, #f20ac2) !important;
            border-color: #0a58ca;
    }

    .lgnn {
        color: #fff !important;
        background: linear-gradient(57deg, #4963d5, #040b67bd) !important;
        border-color: #0a58ca !important;
        text-decoration: none;
    }

    .lgnn:hover {
            color: #fff;
            background: linear-gradient( 57deg,#0b06b996, #f20ac2) !important;
            border-color: #0a58ca;
    }

</style>

<div class="row">
    <div class="col-12">
        <div class="card">
            <img src="~/loginimages/punorbhaba.png" height="100" width="100" class="login-pic" />
            <hr />

            <section>
                <form method="post" action="/Home/ResetPasswordConfirm">
                    <input type="hidden" name="Token" value="@Model.Token" />
                    <input type="hidden" name="Email" value="@Model.Email" />

                    <div class="form-floating" style="padding-bottom: 5px;">
                        <input asp-for="NewPassword" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="NewPassword" class="form-label"></label>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating" style="padding-bottom: 5px;">
                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
